<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#007FFF"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivWelcome"
                android:layout_width="415dp"
                android:layout_height="351dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/hello" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon1" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Welcome!"
                        android:textColor="#F5FAFA"
                        android:textSize="40sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Thanks for using our app! Our app allows you to maintain a list of products and their warranty expiry date."
                    android:textColor="#F5FAFA"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/whiteLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5FAFA"
                    android:orientation="horizontal"
                    android:padding="2dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivWondering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wondering" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon2" />

                    <TextView
                        android:id="@+id/tvWondering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Wondering"
                        android:textColor="#F5FAFA"
                        android:textSize="40sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHehe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Hehe. Are you wondering how to use our app?"
                    android:textColor="#F5FAFA"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvAddExample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="After entering the information of the things/product needed, simply press on the add button to add them! :D"
                    android:textColor="#F5FAFA"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvEditExample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="To edit something you've already add, simply click on the update button after entering the SAME name, and it's NEW expire date."
                    android:textColor="#F5FAFA"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvDeleteExample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Aye, if you would like to DETELE something from the list, simply enter the same name of the item you want to delete, and press on the DELETE button. :)"
                    android:textColor="#F5FAFA"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/whiteLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5FAFA"
                    android:orientation="horizontal"
                    android:padding="2dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivEnjoy"
                android:layout_width="match_parent"
                android:layout_height="296dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/enjoyment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon3" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Enjoy!"
                        android:textColor="#F5FAFA"
                        android:textSize="40sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCongrats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Congratulations! You've successfully learnt the basic knowledge of this app!"
                    android:textColor="#F5FAFA"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvTodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="You're able to read more on about us by pressing on the VISIT ME button, or to CONTINUE, press on the NEXT button."
                    android:textColor="#F5FAFA"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVistMe"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="VIST ME"
                    android:textSize="18sp"
                    app:backgroundTint="#172240" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="NEXT"
                    android:textSize="18sp"
                    app:backgroundTint="#172240" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>